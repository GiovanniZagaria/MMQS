<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
      		id="carisma.evolution.uml2.umlchange.ui.contribution"
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.adf">
         <action
               class="carisma.evolution.uml2.umlchange.ui.ConvertToUMLChangeAnalysis"
               enablesFor="1"
               id="carisma.evolution.uml2.umlchange.ui.ConvertToUMLChangeAnalysis"
               label="Convert to UMLchange analysis"
               menubarPath="carisma.ui.eclipse.menu1/group1">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="carisma.evolution.uml2.umlchange.ui.converttoumlchange"
            name="Convert to UMLchange analysis">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:carisma.ui.eclipse.menu.carisma">
         <command
               commandId="carisma.evolution.uml2.umlchange.ui.converttoumlchange">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="carisma.perspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="carisma.evolution.uml2.umlchange.ui.ConvertToUMLChangeEditorHandler"
            commandId="carisma.evolution.uml2.umlchange.ui.converttoumlchange">
         <activeWhen>
            <and>
               <with
                     variable="activePartId">
                  <equals
                        value="carisma.core.editors.AdfEditor">
                  </equals>
               </with>
               <with
                     variable="activeEditorInput">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="adf">
                     </test>
                  </adapt>
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="carisma.evolution.uml2.umlchange.ui.ConvertToUMLChangeNavigatorHandler"
            commandId="carisma.evolution.uml2.umlchange.ui.converttoumlchange">
         <activeWhen>
            <with
                  variable="selection">
               <and>
                  <iterate
                        operator="and">
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="adf">
                     </test>
                  </iterate>
                  <count
                        value="1">
                  </count>
               </and>
            </with>
         </activeWhen>
      </handler>
   </extension>

</plugin>
